/* Specify the format for markdown */
contentPadding = 20px;

.pages
    -webkit-hyphens: auto;
    -moz-hyphens: auto;
    -ms-hyphens: auto;
    hyphens: auto;

.pages h1, h2, h3, h4, h5, h6
    font-family: headers;

.pages a
    color: highlightColor;

/* For code blocks: */
.pages pre
    background-color: shade(backgroundColor, 10%);
    padding: contentPadding;
    box-shadow: 0px 2px 3px 0px rgba(0,0,0,0.4);

.pages blockquote
    padding: contentPadding + 10px;
    padding-top: 0px;
    padding-bottom: 0px;
    margin: 0;
    border-left: 5px solid highlightColor;

.pages blockquote p
    margin: 0px;