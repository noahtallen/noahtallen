#header
    background-color: midColor;
    position: fixed;
    z-index: 1;
    float: left;
    width: 20%;
    height: 100%;
    box-shadow: 2px 2px 3px rgba(0,0,0,0.4);
    text-align: center;
    min-width: 145px;

#header-container
    width: 100%;
    height: 100%;
    padding-top: 20px;
    padding-right: 10px;
    padding-left: 10px;
    box-sizing: border-box;

#title
    padding-top: 10px;
    color: white;
    font-family: headers;
    font-size: 40px;

#menu
    padding-top: 20px;
    box-sizing: border-box;
    align-items: center;

/* --- BUTTON STYLE ---*/
.header-button:before, .header-button:after
    content: "";
    height: 1px;
    background: linear-gradient(to right,  rgba(0,0,0,0) 0%, highlightColor 50%,rgba(0,0,0,0) 100%);
    display: block;

.header-button
    color: white;
    font-family: headers;
    font-size: 20px;
    line-height: 50px;
    height: 50px;
    width: 100%;

.header-button:hover
    background: highlightColor;
    cursor: pointer;
